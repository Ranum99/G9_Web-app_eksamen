generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  createdAt DateTime @default(now())
  //User slot is new
  userSlot UserSlot[]
}

model Calender {
  id Int @id @default(autoincrement())
  name String @unique
  createdAt DateTime @default(now())
  slot Slot[]
}

model Slot {
  id Int @id @default(autoincrement())
  slug String @unique
  order Int @unique
  createdAt DateTime @default(now())
  openAt DateTime
  calender Calender @relation(fields: [calenderId], references: [id])
  calenderId Int
  //user slot is new 
  userSlot UserSlot[]
}

model UserSlot {
  id Int @id @default(autoincrement())
  
  coupon String
  createdAt DateTime @default(now())


 
  //slot is new one to many,  (a slot can have many user slot, but a user slot can only have one slot)
  slot Slot @relation(fields: [slotId], references: [id])
  slotId Int
  

 
  //one to many  a( a user slot can only have one user, a user can have multiple slots (one for each day))
  user User  @relation(fields: [slotId], references: [id])
  userId Int
}